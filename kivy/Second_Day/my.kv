<Label>
    font_size:20
    color:"#335FFF"
    bold:True
    italic:True

<Button>
    font_size:28
    size_hint_y:None

<MyGridLayout>

    GridLayout:
        cols:1
        size:root.width,root.height
        
        GridLayout:
            padding:15
            cols:2
            
            Label:
                text:"Name"
            TextInput:
                multiline:False
                id:name
                
            Label:
                text:"food"
            TextInput:
                id:food
                multiline:False
                
            Label:
                text:"Male"
            CheckBox:
                id:checkValue
                on_active:root.checkbox_click(self,self.active)
                
        
        Button:
            text:"Submit"
            on_press:root.press()
            
        Button:
            text:"Enter"